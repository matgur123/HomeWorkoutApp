<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeWorkoutApp.Views.StartPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="#000000">
                <Image Source="StartPAgeLogo.jpg" WidthRequest="100" HeightRequest="130"/>
                <StackLayout>
                    <Image Source="StartPAgemIDDLE.jpg"/>
                </StackLayout>
                <Button Text="Click me"
        Clicked="OnButtonClicked"
        TextColor="Blue"
        BackgroundColor="Aqua"
        BorderColor="Red"
        BorderWidth="5"
        CornerRadius="5"
        WidthRequest="150"
        HeightRequest="75" />
            </StackLayout>
      
        </ScrollView>
    </ContentPage.Content>
</ContentPage>