<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeWorkoutApp.Views.StartPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="#000000">
                <Image Source="StartPAgeLogo.jpg" WidthRequest="100" HeightRequest="110"/>
                <StackLayout>
                    <Image Source="StartPAgemIDDLE.jpg" Margin="50,0,0,20"/>
                </StackLayout>
                <Button Text="Click me"
        Clicked="OnButtonClicked"
        TextColor="#ffffff"
        TextTransform="Uppercase"
        FontAttributes="bold"
        FontSize="11"
                        FontFamily="Monaco"
                        BorderColor="#ffffff"
                        BorderWidth="2"
        BackgroundColor="#14b32b"
        WidthRequest="90"
                        HeightRequest="35"
                        Margin="80,0,80,0"
        CornerRadius="10" 
        />
            </StackLayout>
      
        </ScrollView>
    </ContentPage.Content>
</ContentPage>